---
import { Icon } from "astro-icon";
import ContentSection from "~/components/content-section.astro";
import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
  {
    url: "mailto:moin@derbe.dev",
    description: "Write me an E-Mail",
    icon: "email",
  },
  {
    url: "https://github.com/CrazyDevCake",
    description: "View on GitHub",
    icon: "github",
  },
];
---

<ContentSection title="Das wars." id="">
  <Fragment slot="lead">
    Lass uns deine Vision zum Leben erwecken. Schreib mir. Sonst sonst setze ich
    einen Infinite Loop auf dich an.
  </Fragment>
  <ul class="relative grid grid-cols-2 gap-4">
    {
      links.map((link) => (
        <li>
          <a
            class="flex h-16 w-16 items-center justify-center rounded-full border-2 border-current p-4"
            href={link.url}
            target="_blank"
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="h-full" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
</ContentSection>
