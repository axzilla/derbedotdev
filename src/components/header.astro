---
import { Picture } from "@astrojs/image/components";
import meImage from "~/assets/me.png";

const widths = [800, 800];
const sizes = "(min-width: 640px) 67vw, 67vw";
---

<section class="relative h-full bg-black">
  <div class="relative grid h-full place-items-center sm:grid-cols-2">
    <h1
      class="flex flex-col gap-2 self-end sm:gap-4 sm:self-auto sm:justify-self-center"
    >
      <div
        class="inline-block font-extrabold tracking-tighter text-white text-8xl"
      >
        Ich<span class="text-pink-500">.</span>
        <br /> Mache<span class="text-pink-500">.</span>
        <br /> Software<span class="text-pink-500">.</span>
      </div>
    </h1>
    <div
      class="max-w-xs self-center overflow-hidden rounded-full border-4 border-white bg-white sm:self-auto sm:justify-self-center md:max-w-md"
    >
      <Picture
        class="object-cover w-full h-full"
        src={meImage}
        widths={widths}
        sizes={sizes}
        loading="eager"
        alt="Thats me."
      />
    </div>
  </div>
</section>
